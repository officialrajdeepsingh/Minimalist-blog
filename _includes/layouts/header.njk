<header class="text-gray-600 body-font" >
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a href="/" class="cursor-pointer flex cursor title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
      <span class="ml-3 text-xl"> {{ site.logo }}</span>
    </a>

      
<nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
  <ul class="flex">
      {%- for entry in search.pages("menu.visible=true", "menu.order") %}
        <li class="mr-5 hover:text-gray-900">
          <a href="{{ entry.data.url }}"{% if entry.data.url == url %} aria-current="page"{% endif %}>
            {{ entry.data.menu.title or entry.data.title }}
          </a>
        </li>
      {%- endfor %}
      </ul>
</nav>
  </div>
</header>


